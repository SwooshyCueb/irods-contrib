[Unit]
Description=iRODS elk stack first-run setup
After=activemq.service
After=elasticsearch.service
After=logstash.service
After=kibana.service
Requires=activemq.service
Requires=elasticsearch.service
Requires=logstash.service
Requires=kibana.service

[Service]
Type=oneshot
ExecStart=/var/lib/irods-elk/firstrun.sh
TimeoutSec=600s

[Install]
WantedBy=multi-user.target
